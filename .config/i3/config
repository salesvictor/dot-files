#}

# Lock screen
#bindsym $mod+x exec i3lock --color 475263
bindsym $mod+x exec $HOME/.config/i3/aux/lock.sh
bindsym $mod+Shift+x exec shutdown 0

# Web browser (Google Chrome)
set $webapp google-chrome-stable
bindsym $mod+w exec $webapp

# Bind programs to workspaces
#assign [class="URxvt"] $ws2

# Handful calculator
for_window [instance="cool_calc"] floating enable, move scratchpad
bindsym $mod+m [instance="cool_calc"] scratchpad show
exec --no-startup-id urxvt -name cool_calc -geometry 32x8 -e bc -lq

# Compositor
#exec_always --no-startup-id compton --backend glx -cCGf -i 0.5 --blur-method kawase --blur-strength 5 --blur-background -r 3 -o 0.5 -l 0 -t 0
exec_always --no-startup-id compton --config $HOME/.config/compton/config

# Wallpaper
exec_always --no-startup-id feh --bg-fill $HOME/Downloads/MyDeathStar.png

# Screenshots
bindsym --release Print exec scrot -e 'mv $f ~/Screenshots'
bindsym --release Shift+Print exec scrot -se 'mv $f ~/Screenshots'
#bindsym --release Print exec scrot $HOME/Screenshots/%Y_%m_%d_%H:%M:%S_$w_$h.png
#bindsym --release Shift+Print exec scrot -s $HOME/Screenshots/%Y_%m_%d_%H:%M:%S_$w_$h.png

# Laptop compatibility

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 5 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec $HOME/.config/i3/aux/toggletouchpad.sh

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
